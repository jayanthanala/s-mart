<div class="container">
    <h1 class="text-center my-4">Modify Products</h1>
    <hr>
    <form action="/manager/proddetails/<%=results[0].p_id%>/modify?_method=patch" method="post">
    <div class="container">
      <div class="row">
        <div class="form-group col-md-6">
            <label for="name">Product Name</label>
            <input type="text" class="form-control" id="name" name="name"  value="<%=results[0].p_name%>">
          </div>
          <div class="form-group col-md-6">
        <label for="mrp">Product MRP</label>
        <input type="number" class="form-control" id="mrp" name="mrp" min=1 step="any" value="<%=results[0].p_mrp%>">
      </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
            <label for="qty">Min_Quantity</label>
            <input type="number" min=1 class="form-control" id="qty" name="qty" value="<%=results[0].min_qty%>">
          </div>
          <div class="form-group col-md-6">
        <label for="pcp">Purchase Cost per unit</label>
        <input type="number" class="form-control" id="pcp" name="pcp" step="any" value="<%=results[0].pc_perunit%>">
      </div>
      </div>
    <div class="row">
      <div class="form-group col-md-12">
        <label for="sid">Supplier: </label>
        <select name="sid" id="sid" class="custom-select">
           <%if(suppliers[0]){%>
            <%for(let i=0;i<=suppliers.length-1;i++){ %>
                <%if(suppliers[i].su_name==results[0].su_name){%>
                    <option value="<%=suppliers[i].su_id%>" selected><%=suppliers[i].su_name%></option>
                <%}else{%>
                    <option value="<%=suppliers[i].su_id%>"><%=suppliers[i].su_name%></option>
                <%}%>
            <%}%>
           <%}else{%>
            <option value="none">No suppliers Added</option>
           <%}%>
        </select>
      </div>
    </div>

    <div class="text-center">
      <button class="btn btn-large btn-outline-success">Submit</button>
    </div>
  
    </div>
  
    </form>
    </div>

